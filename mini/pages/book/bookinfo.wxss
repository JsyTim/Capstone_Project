/* pages/book-detail/book-detail.wxss */
/* 图书详情样式 */

page {
    background-color: rgb(243, 243, 243);
}

.desc-container {
    width: 100%;
    height: 180px;
    background-color: #fff;
}

.desc-container image {
    width: 250rpx;
    height: 125px;
    margin-top: 30px;
    float: left;
}

.desc-container .right {
    width: 50%;
    height: 165px;
    float: left;
    padding-top: 15px;
    padding-left: 10px;
}

.right .title {
    font-size: 36rpx;
    color: #000;
    font-weight: bold;
    margin-top: 10px;
}

.right .author {
    font-size: 28rpx;
    color: #333;
    margin-top: 15px;
}

.right .press {
    font-size: 28rpx;
    color: #333;
    margin-top: 10px;
}

.right .classify1 {
    font-size: 28rpx;
    color: #333;
    margin-top: 10px;
}

.right .address {
    font-size: 28rpx;
    color: #333;
    margin-top: 10px;
}

.right .grade {
    font-size: 28rpx;
    color: #333;
    float: left;
}

.right .grade {
    color: #333;
    font-size: 28rpx;
    margin-top: 10px;
    float: left;
    display: flex;
    flex-direction: row;
}

.right .grade image {
    width: 10px;
    height: 10px;
    margin-top: 0;
}

.van-card{
  padding-top:15rpx !important;
  padding-bottom:15rpx !important;
  padding-left:5rpx !important;
}
.van-card__thumb{
   width:180px !important;
   height:200px !important;
}

.van-card__title {
  padding-top:10rpx;
  padding-bottom:30rpx;
  font-size:40rpx;
  line-height:10px;
}

.van-card__price{
  display:inline-block;
  padding-top:20rpx;
  font-size:50rpx !important;
  font-weight:300 !important;
  color:#000  !important
}

.van-card__origin-price{
  font-size:25rpx !important;
  color:#f44 !important;
}

.van-rate{
  padding-top:10rpx !important;
}
/* 图书详情样式end */

/* 图书介绍样式 */

.box {
  margin: 20rpx 0;
}

.box view.cu-bar {
  margin-top: 20rpx;
}

.content-container {
    width: 100%;
    float: left;
    background: #fff;
    margin-top: 1px;
}

.content-container .title {
    font-size: 32rpx;
    color: #000;
    font-weight: bold;
    padding: 15px;
    padding-bottom: 5px !important;
    display: block;
}

.content-container .content {
    font-size: 28rpx;
    color: #333;
    padding: 15px;
    display: block;
    margin-top: -25px;
    text-indent:1em;
}

/* 图书介绍样式end */

/* 相关书籍样式 */

.recommended-container {
    width: 100%;
    height: 280px;
    background: #fff;
    margin-top: 1px;
    float: left;
}

.recommended-container .title {
    font-size: 32rpx;
    color: #000;
    font-weight: bold;
    padding: 15px;
    display: block;
    margin-bottom: 10px;
}

.recommended-container .book {
    width: 100%;
    height: 100px;
    margin-top: 10px;
    display: flex;
    flex-direction: row;
    justify-content: center;
}

.recommended-container image {
    width: 180rpx;
    height: 120px;
    margin: 0 auto;
}

/* 相关书籍样式end */

/* 执行操作样式 */

.operate-container {
    width: 100%;
    height: 100px;
    background: #fff;
    float: left;
    margin-top: 1px;
}

.operate-container .title {
    font-size: 32rpx;
    color: #000;
    font-weight: bold;
    padding: 15px;
    display: block;
    margin-bottom: 10px;
}

.operate-container .btn {
    width: 250rpx;
    height: 60rpx;
    border: 1px solid #4db6ac;
    color: #4db6ac;
    font-size: 30rpx;
    text-align: center;
    border-radius: 5px;
    line-height: 60rpx;
    margin-top: -10px;
}

.operate-container .disable-btn {
    width: 250rpx;
    height: 60rpx;
    border: 1px solid #4db6ac;
    color: #4db6ac;
    font-size: 30rpx;
    text-align: center;
    border-radius: 5px;
    line-height: 60rpx;
    margin-top: -10px;
}

.btn-left {
    float: left;
    margin-left: 40px;
}

.btn-right {
    float: right;
    margin-right: 40px;
}

/* 执行操作样式end*/

.footer-box{
  width: 100%;
  height: 100rpx;
  background-color: #fff;
  position: fixed;
  bottom: 0;
  left: 0;
  display: flex;
  box-shadow:0 0 8rpx 0 ;
}
.footer-box .shop-cart-btn {
  position: relative;
  width: 135rpx;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
  background-size: 44rpx auto;
}
.footer-box .shop-cart-btn .shop-num{
  position: absolute;
  color:#e54d42;
  left: 85rpx;
  top:10rpx;
}
.footer-box .join-shop-cart{
  text-align: center;
  width: 310rpx;
  height: 100%;
  line-height: 100rpx;
  background-color: #f37b1d;
  color:#fff;
  font-size: 30rpx;
}
.footer-box .now-buy{
  text-align: center;
  height: 100%;
  width: 310rpx;
  line-height: 100rpx;
  background-color: #e54d42;
  color:#fff;
  font-size: 30rpx;
}
.show-popup{
  position: fixed;
  top: 0;
  left: 0;
  width:100%;
  height: 100%;
  z-index: 4;
}
.popup-mask{
  position: fixed;
  top: 0;
  left: 0;
  width:100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 5;
}
.popup-contents{
  position: fixed;
  left: 0;
  bottom: 0;
  width:100%;
  background-color: #fff;
  z-index: 6;
}
.pop-goods-info{
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-left: 30rpx;
  padding: 30rpx 0;
  border-bottom: 1px solid #eee;
}
.pop-img-box{
  width: 120rpx;
  height: 150rpx;
  overflow: hidden;
  margin-right: 26rpx;
}
.pop-img-box .goods-thumbnail{
  width: 120rpx;
  height: 150rpx;
}
.pop-goods-title{
  width: 484rpx;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
  font-size:26rpx;
  color:#000000;
}
.pop-goods-price{
  font-size:26rpx;
  color:#e64340;
  margin-top:20rpx;
}
.pop-goods-close{
  width: 36rpx;
  height: 36rpx;
  flex: 1;
  background:url("http://cdn.static.54php.cn/mina_order/popup-close.png") no-repeat center center;
  background-size: 36rpx auto;
  align-self: flex-start;
  margin-top: -10rpx;
}
.size-label-box  .label{
  font-size:26rpx;
  color:#000;
  padding-left: 30rpx;
  padding: 30rpx 0 20rpx 30rpx;
}
.size-label-box .label-item-box{
  display: flex;
  margin-left: 30rpx;
  flex-direction: row;
  flex-wrap:wrap;
}
.size-label-box .label-item{
  font-size:26rpx;
  color:#000;
  padding: 14rpx 20rpx;
  border: 1px solid #ddd;
  border-radius: 6rpx;
  margin: 0 20rpx 20rpx 0;
}
.size-label-box .label-item.active{
  color: #e64340;
  border: 1px solid #e64340;
}
.buy-num-box{
   display: flex;
   justify-content: space-between;
   padding: 30rpx 30rpx 48rpx 0;
   margin-left: 30rpx;
   border-top: 1px solid #eee;
   margin-top: 30rpx;
   align-items: center;
}
.num-label{
  font-size:26rpx;
  color:#000000;
}
.buy-num-box .num-box{
     display: flex;
}
.buy-num-box .num-box .num-jian,
.buy-num-box .num-box .num-input,
.buy-num-box .num-box .num-jia{
  width: 80rpx;
  height: 64rpx;
  line-height: 62rpx;
  text-align: center;
  border: 1px solid #eee;
}
.buy-num-box .num-box .num-input{
  font-size: 28rpx;
}
.buy-num-box .num-box .num-input input{
  height: 100%;
}
.popup-join-btn{
  width: 100%;
  height: 89rpx;
  text-align: center;
  line-height: 89rpx;
  font-size:34rpx;
  color:#ffffff;
  background-color: #e64340;
}
.buy-num-box .num-box .hui{
  background-color: #f5f5f9;
}
